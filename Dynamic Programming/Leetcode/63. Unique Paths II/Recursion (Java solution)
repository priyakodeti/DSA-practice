class Solution {
    public static int countWays(int[][] obstacleGrid,int m,int n)
    {
        if(m<0 || n<0)
            return 0;
        if(obstacleGrid[m][n]==1)
            return 0;
        if(m==0 && n==0)   
            return 1;

        int up=countWays(obstacleGrid,m-1,n);
        int left=countWays(obstacleGrid,m,n-1);
        return up+left;

    }
    public int uniquePathsWithObstacles(int[][] obstacleGrid) {
        int m=obstacleGrid.length;
        int n=obstacleGrid[0].length;
        if(obstacleGrid[0][0]==1)  
              return 0;
      
       return countWays(obstacleGrid,m-1,n-1);
    }
}
