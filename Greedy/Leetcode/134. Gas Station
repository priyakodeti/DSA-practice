//134. Gas Station
//Difficulty level: Medium

class Solution {
    public int canCompleteCircuit(int[] gas, int[] cost) {
        int total_gas=0,total_cost=0;

        for(int i=0;i<gas.length;i++)
        {
            total_gas+=gas[i];
            total_cost+=cost[i];
        }
        if(total_gas<total_cost)
            return -1;
        
        int res=0,total=0;
    
        for(int i=0;i<gas.length;i++)
        {
                total=total+gas[i]-cost[i];
                if(total<0)
                {
                    total=0;
                    res=i+1;
                }
        }
        return res;
    }
}
