//646. Maximum Length of Pair Chain
//Difficulty level: Medium

class Solution {
    public int findLongestChain(int[][] pairs) {
        Arrays.sort(pairs,(a,b)->a[1]-b[1]);

        int last=pairs[0][1],ans=1;
        for(int i=0;i<pairs.length;i++)
        {
            if(pairs[i][0]>last)
            {
                last=pairs[i][1];
                ans++;
            }
        }
        return ans;
    }
}
