//Leetcode (Medium)
//881.Boats to Save People
class Solution {
    public int numRescueBoats(int[] people, int limit) {
        Arrays.sort(people);
        int boats=0,i=0,j=people.length-1;
        while(i<=j)
        {
            if((people[i]+people[j]) <=limit)
            {
                boats++;
                i++;
                j--;
            }
            else if(people[j]<=limit)
            {
                boats++;
                j--;
            }
            else
            {
                return boats;
            }
                
        }
        return boats;
    }
}
