//Leetcode (Medium)
//1328. Break a Palindrome
class Solution {
    public String breakPalindrome(String palindrome) {
        
        if(palindrome.length()==1)
            return "";
        char[] ch=palindrome.toCharArray();
        boolean done =false;
        for(int i=0;i<palindrome.length()/2;i++)
            {
                if(ch[i]!='a')
                {
                    ch[i]='a';
                    done=true;
                    break;
                }
            }
        if(!done)
        {
            ch[ch.length-1]='b';
            
        }
        String res="";
        for(char i:ch)
            {
                res+=i;
            }
        return res;
    }
}
