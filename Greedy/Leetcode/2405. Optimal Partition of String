//2405. Optimal Partition of String
//Difficulty level: Medium

class Solution {
    public int partitionString(String s) {
     int[] idx=new int[26];
     Arrays.fill(idx,-1);
     int start_of_substring=0,count=0;

     for(int i=0;i<s.length();i++)
     {
        if(idx[s.charAt(i)-'a']>=start_of_substring)
        {
            count++;
            start_of_substring=i;
        }
        idx[s.charAt(i)-'a']=i;
     }   
     return count+1;
    }
}
