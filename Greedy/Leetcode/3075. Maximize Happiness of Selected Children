//Leetcode (Medium)
//3075. Maximize Happiness of Selected Children
class Solution {
   
    public long maximumHappinessSum(int[] happiness, int k) {
        Arrays.sort(happiness);
        int l=0,r=happiness.length-1;
        while(l<r)
        {
            int temp=happiness[l];
            happiness[l]=happiness[r];
            happiness[r]=temp;
            l++;
            r--;
        }
        
        long sum=0,c=0;
        for(int i=0;i<happiness.length;i++)
        {
            if(k==0)
                break;
            if( (happiness[i]-i) >0)
                sum+=(happiness[i]-i);
            
            k--;
        }
        return sum;
    }
}
