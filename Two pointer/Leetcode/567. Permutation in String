//567. Permutation in String
//Difficulty level: Medium

class Solution {
    public static boolean allZeros(int[] f)
    {
        for(int i=0;i<26;i++)
        {
            if(f[i]!=0)
                return false;
        }
        return true;
    }
    public boolean checkInclusion(String s1, String s2) {
        int m=s1.length(),n=s2.length();
        if(m>n)
            return false;
        int[] freq=new int[26];
        for(int i=0;i<m;i++)
            freq[s1.charAt(i)-'a']++;
        
        int l=0,r=0;
        while(r<n)
        {
            freq[s2.charAt(r)-'a']--;
            if(r-l+1==m)
            {
                if(allZeros(freq))
                    return true;
                freq[s2.charAt(l)-'a']++;
                l++;
            }
            r++;
        }
        return false;

    }
}
